<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fang="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_bg"
    android:orientation="vertical"
    tools:context="com.mycj.jusd.DeviceAcitivy" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_main_tab" >

        <com.mycj.jusd.view.AlphaImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_nav_back" />

        <com.mycj.jusd.view.AlphaImageView
            android:id="@+id/img_sync_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_nav_re_device" />

        <com.mycj.jusd.view.FangTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:text="运动计划"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            fang:fang_typeface="JIAN" />
    </RelativeLayout>

    <com.mycj.jusd.view.DampingScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <!-- line 2 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_bg_item_setting"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    >
                    <com.mycj.jusd.view.FangTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="4"
                    android:layout_centerVertical="true"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="运动计划"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:fang_typeface="JIAN" />

                <com.mycj.jusd.view.FangCheckBox
                    android:id="@+id/cb_sport_plan_on_off"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="36dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_check_box"
                    android:button="@null" />
                    
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main_tab" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="起始时间"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.jusd.view.FangTextView
                        android:id="@+id/tv_sport_plan_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                           android:minEms="3"
                        android:gravity="center"
                        android:text="06:00"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="JIAN" />
                </LinearLayout>
            </LinearLayout>
			
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_bg_item_setting"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    >
                    <com.mycj.jusd.view.FangTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="4"
                    android:layout_centerVertical="true"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="运动目标"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:fang_typeface="JIAN" />

                <com.mycj.jusd.view.FangCheckBox
                    android:id="@+id/cb_sport_goal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="36dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_check_box"
                    android:button="@null" />
                    
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main_tab" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="计步步数"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.jusd.view.FangTextView
                        android:id="@+id/tv_sport_goal_step_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:minEms="2"
                        android:gravity="center"
                        android:text="- - -"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="JIAN" />
                    
 <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="步"
                        android:layout_marginLeft="6dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />                </LinearLayout>
                 <View
                      android:id="@+id/line_sport_goal_distance"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main_tab" />
                <LinearLayout
                    android:id="@+id/ll_sport_goal_distance"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="轨迹距离"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.jusd.view.FangTextView
                         android:id="@+id/tv_sport_goal_distance_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:text="- - -"
                           android:minEms="2"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="JIAN" />
                    
 <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="公里"
                        android:layout_marginLeft="6dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_bg_item_setting"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >

                <com.mycj.jusd.view.FangTextView
                    android:id="@+id/tv_setting_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:ems="4"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="自动签到"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:fang_typeface="JIAN" />
                 <com.mycj.jusd.view.FangTextView
                     android:id="@+id/tv_setting_auto_value"
                     android:layout_toRightOf="@id/tv_setting_auto"
                     android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:text="- - -"
                           android:minEms="2"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="JIAN" />
                    
 					<com.mycj.jusd.view.FangTextView
 					       android:layout_toRightOf="@id/tv_setting_auto_value"
                     android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="公里"
                        android:layout_marginLeft="6dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" /> 

                <com.mycj.jusd.view.FangCheckBox
                    android:id="@+id/cb_auto_sign_on_off"
                    android:layout_width="36dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_check_box"
                    android:button="@null" />
            </RelativeLayout>
		
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_bg_item_setting"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    >
                    <com.mycj.jusd.view.FangTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="4"
                    android:layout_centerVertical="true"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:text="配速设置"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:fang_typeface="JIAN" />

                <com.mycj.jusd.view.FangCheckBox
                    android:id="@+id/cb_pace_on_off"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="36dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_check_box"
                    android:button="@null" />
                    
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_main_tab" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="最慢配速"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                           android:minEms="3"
                        android:gravity="center"
                        android:text="12'11"
                        android:id="@+id/tv_pace_min_value"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="JIAN" />
                     <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:layout_marginLeft="6dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="最快配速"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />

                    <com.mycj.jusd.view.FangTextView
                            android:id="@+id/tv_pace_max_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/bg_grey_text"
                        android:clickable="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:text="1'11"
                           android:minEms="3"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_alpha="true"
                        fang:fang_typeface="JIAN" />
                </LinearLayout>
            </LinearLayout>
            
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                     android:background="@drawable/selector_bg_item_setting"
                      android:layout_marginTop="6dp"
                       android:paddingLeft="20dp"
                android:paddingRight="10dp"
                   >
                  <com.mycj.jusd.view.FangTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="4"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="运动类型 "
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        fang:fang_typeface="JIAN" />
                
            <RadioGroup
                android:id="@+id/rg_sport_style"
                android:layout_width="match_parent"
                android:layout_height="40dp"
               android:layout_marginLeft="10dp"
              
               
                android:orientation="horizontal"
                 >

                <com.mycj.jusd.view.FangRadioButton
                    android:id="@+id/rb_style_walk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_bg_personal_setting"
                    android:button="@null"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="步行"
                       android:minEms="2"
                        android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:f_typeface="JIAN" />

                <com.mycj.jusd.view.FangRadioButton
                    android:id="@+id/rb_style_cycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/selector_bg_personal_setting"
                    android:button="@null"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="骑行"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                       android:minEms="2"
                        android:gravity="center"
                    fang:f_typeface="JIAN" />
                <com.mycj.jusd.view.FangRadioButton
                      android:id="@+id/rb_style_run"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/selector_bg_personal_setting"
                    android:button="@null"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="跑步"
                       android:minEms="2"
                        android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    fang:f_typeface="JIAN" />
            </RadioGroup>
            </LinearLayout>
            
            
        </LinearLayout>
    </com.mycj.jusd.view.DampingScrollView>

</LinearLayout>
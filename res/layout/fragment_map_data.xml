<com.mycj.jusd.view.DampingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/ic_record_detail_i" />

                            <LinearLayout
                                android:id="@+id/ll"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <com.mycj.jusd.view.FangTextView
                                        android:id="@+id/tv_sport_info_step"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="1000"
                                        android:textColor="@android:color/white"
                                        android:textSize="14sp"
                                        my:fang_typeface="NUM" />

                                    <com.mycj.jusd.view.FangTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="步"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp"
                                        my:fang_typeface="JIAN" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <com.mycj.jusd.view.FangTextView
                                        android:id="@+id/tv_sport_info_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="10:22:00"
                                        android:textColor="@android:color/white"
                                        android:textSize="14sp"
                                        my:fang_typeface="NUM" />

                                    <com.mycj.jusd.view.FangTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="用时"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp"
                                        my:fang_typeface="JIAN" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <com.mycj.jusd.view.FangTextView
                                        android:id="@+id/tv_sport_info_distance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="1000km"
                                        android:textColor="@android:color/white"
                                        android:textSize="14sp"
                                        my:fang_typeface="NUM" />

                                    <com.mycj.jusd.view.FangTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="距离"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp"
                                        my:fang_typeface="JIAN" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>

                        <RelativeLayout
                            android:id="@+id/rl_speed"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@id/ll" >

                            <ImageView
                                android:id="@+id/img_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/ic_sport_time" />

                            <com.mycj.jusd.view.FangTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:layout_toRightOf="@id/img_speed"
                                android:text="平均速度"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                my:fang_typeface="JIAN" />

                            <com.mycj.jusd.view.FangTextView
                                android:id="@+id/tv_sport_avg_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="24dp"
                                android:text="3.12公里/时"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                my:fang_typeface="JIAN" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/bg_main_tab" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@id/rl_speed" >

                            <ImageView
                                android:id="@+id/img_consume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/ic_sport_consume" />

                            <com.mycj.jusd.view.FangTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:layout_toRightOf="@id/img_consume"
                                android:text="能量消耗"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                my:fang_typeface="JIAN" />

                            <com.mycj.jusd.view.FangTextView
                                android:id="@+id/tv_sport_info_cal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="24dp"
                                android:text="30千卡"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                my:fang_typeface="JIAN" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true" >

                                <ImageView
                                    android:id="@+id/ImageView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="24dp"
                                    android:src="@drawable/ic_sport_consume" />

                                <com.mycj.jusd.view.FangTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="12dp"
                                    android:layout_toRightOf="@+id/ImageView01"
                                    android:text="能量消耗"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    my:fang_typeface="JIAN" />

                                <com.mycj.jusd.view.FangTextView
                                    android:id="@+id/FangTextView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="24dp"
                                    android:text="30千卡"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    my:fang_typeface="JIAN" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/bg_main_tab" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@id/rl_speed" >

                            <ImageView
                                android:id="@+id/img_step"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/ic_sport_consume" />

                            <com.mycj.jusd.view.FangTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:layout_toRightOf="@id/img_step"
                                android:text="能量消耗"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                my:fang_typeface="JIAN" />

                            <com.mycj.jusd.view.FangTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="24dp"
                                android:text="30千卡"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                my:fang_typeface="JIAN" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/bg_main_tab" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@id/rl_speed" >

                            <ImageView
                                android:id="@+id/img_hr_avg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/ic_sport_consume" />

                            <com.mycj.jusd.view.FangTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:layout_toRightOf="@id/img_hr_avg"
                                android:text="能量消耗"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                my:fang_typeface="JIAN" />

                            <com.mycj.jusd.view.FangTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="24dp"
                                android:text="30千卡"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                my:fang_typeface="JIAN" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/bg_main_tab" />
                    </LinearLayout>
                </LinearLayout>
            </com.mycj.jusd.view.DampingScrollView>